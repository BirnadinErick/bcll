{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@comp/*": [
        "src/components/*"
      ],
      "@frag/*": [
        "src/fragments/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
    },
    "allowImportingTsExtensions": true
  }
}