---
import Header from "@comp/common/Header.astro";
import Search from "@comp/common/Search.astro";
import NavMobile from "@comp/common/NavMobile.astro";
import { name_short, phrase } from "@config/bio.ts";

import { Image } from "astro:assets";
import heroImg from "@assets/hero.jpg";
---

<section
  class="xl:min-h-screen bg-[url('../images/banner/2.png')] bg-cover bg-no-repeat bg-center overflow-hidden xl:pb-[130px]"
>
  <Header />

  <Search />

  <NavMobile />

  <div class="container relative">
    <div
      class="xl:max-w-[570px] xl:pt-[129px] lg:py-28 md:py-20 py-14 lg:space-y-10 space-y-6"
    >
      <div
        class="lg:text-[77px] lg:leading-[106.4px] md:text-6xl md:leading-[72px] text-black font-bold text-5xl leading-[62px]"
      >
        Better
        <span class="text-primary">Lang. Learning</span>
        starts with {name_short}
      </div>
      <div
        class="plain-text text-gray leading-[30px] border-l-2 border-primary pl-4"
      >
        {phrase}
      </div>
      <div class="md:flex md:space-x-4 space-y-3 md:space-y-0 pt-5">
        <a href="/courses" class="btn btn-primary">Enrol a Course</a>
        <a href="/tuts" class="btn btn-black">Watch Free Tutorials</a>
      </div>
    </div>
    <div
      class="imge-box hidden xl:block absolute right-[-60px] top-1/2 -translate-y-1/2 mt-[60px]"
    >
      <Image src={heroImg} alt="a day in BCLL" format="avif" />
    </div>
  </div>
</section>
