---
import { fb_link, phrase } from "@config/bio";
import Brand from "./Brand.astro";
import FooterLinks from "@comp/common/FooterLinks.astro";
import linksJson from "@config/FooterLinks.json";

import Copium from "@frag/Copium.astro";
---

<footer>
  <div
    class="relative z-[1] mx-auto max-w-[1170px] rounded-md bg-[url('../images/all-img/section-bg-3.png')] bg-cover bg-center bg-no-repeat p-20"
  >
    <div
      class="items-center space-x-4 space-y-5 text-center lg:flex lg:space-y-0 lg:text-left"
    >
      <div class="flex-1">
        <div
          class="max-w-[590px] text-3xl font-bold text-white md:text-3xl lg:text-[44px] lg:leading-[61px]"
        >
          Education Is About Creating Leaders Of Tomorrow
        </div>
      </div>
      <div class="flex-none">
        <a href="/courses" class="btn bg-white font-bold text-black">
          Register a Course Today
        </a>
      </div>
    </div>
  </div>
  <div
    class="-mt-[150px] bg-[url('../images/all-img/section-bg-10.png')] bg-cover bg-center bg-no-repeat pt-[150px]"
  >
    <div class="section-padding container">
      <div class="grid grid-cols-12 gap-5">
        <div class="single-footer col-span-12 lg:col-span-6 xl:col-span-3">
          <div class="lg:max-w-[270px]">
            <Brand />
            <p>
              {phrase}
            </p>
            <ul class="flex space-x-4 pt-8">
              <li>
                <a href={fb_link} class="flex h-10 w-10">
                  <img src="/assets/images/icon/fb.svg" alt="" />
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="single-footer col-span-12 lg:col-span-6 xl:col-span-6">
          <div class="ml-auto xl:w-[80%]">
            <div class="flex space-x-[80px]">
              {linksJson["links"].map((ls) => <FooterLinks links={ls} />)}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<Copium />
